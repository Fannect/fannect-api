extend layout

block header
   h1(data-menu-root="profile") Profile
   a.ui-btn-right(href="profile-editBio.html", data-role="button", data-transition="slide") Edit

block content
   .profile-images
      .team-wrap(data-bind="click: changeTeamImage")
         img(data-bind="attr: {src:team_image}, visible: team_image().length > 0")
         .team-hint.ui-corner-all
         .cover
      .user-wrap(data-bind="click: changeUserImage")
         img(data-bind="attr: {src:user_image}, visible: user_image().length > 0")
         .user-hint.ui-corner-all
         .cover

   .name(data-bind="text: name")

   .team-name-wrap
      .team Sporting Kansas City
      .icon

   .score-wrap
      .score.roster
         .label Roster
         .value(data-bind="text: roster")
      .score.points
         .label Points
         .value(data-bind="text: points")
      .score.rank
         .label Rank
         .value(data-bind="text: rank")

   .bio
      .separator
      .text(data-bind="text: bio")

   .bragging-rights
      .separator
      .text(data-bind="text: bragging_rights")

   .game-day-spot
      .separator
      .text(data-bind="text: game_day_spot") 
   
   

