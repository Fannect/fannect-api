extend ../layout

block header
   a(href="/points", data-icon="back", data-rel="back") Back
   h1(data-menu-root="points") Games

block content
   
   script(type="text/javascript")
      window.fannect.attendance_streak = {
         checked_in: !{JSON.stringify(checked_in)},
         no_game: !{JSON.stringify(no_game)},
         next_game: !{JSON.stringify(next_game)}
      };

   .info
      .left-cap
      .right-cap

      .stadium-info
         .stadium= stadium.name
         .location= stadium.location

      .game-info
         .home-info
            .inner
               .team= home.name
               .record= home.record
         .vs
         .away-info
            .inner
               .team= away.name
               .record= away.record

   .bottom
      .inner
         a.check-in(data-role="button", data-bind="visible: !checked_in() && !no_game, click: checkIn") Check In
         .checked-in(data-bind="fadeIn: checked_in() && !no_game, duration: 500", style="display:none;") Checked In!
         .no-game(data-bind="visible: no_game")
            .scrolling-text Check ins are only allowed on game days!
            .next-game
               span.label Next Gameday:
               span.text(data-bind="text: next_game")

