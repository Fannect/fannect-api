extend ../../layout

block header
   a(href="/points", data-icon="back", data-rel="back") Back
   h1 Games

block content
   form.scrollable-content(action="/points/guessTheScore", method="post")
      .score
         .home.guess-block
            label(for="home_guess") Home
            .guess-wrap
               input(type="number", name="home_guess", id="home_guess", pattern="[0-9]*", value="", placeholder="0")
               .value
         .away.guess-block
            label(for="away_guess") Away
            .guess-wrap
               input(type="number", name="away_guess", id="away_guess", pattern="[0-9]*", value="", placeholder="0")
               .value
         .clear

      .team-info
         .home.team-glass
            .team= home.name
            .record= home.record
         .vs
         .away.team-glass
            .team= away.name
            .record= away.record
         .clear

      .picking
         button.submit-guess(type="submit", value="Submit")

      .picked
         .scrolling-text Your pick is set! Check back after the game to view results!
         .game-preview
            .title Game Preview