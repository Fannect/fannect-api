extend ../../layout

block header
   a(href="/points", data-icon="back", data-rel="back") Back
   h1(data-menu-root="points") Games

block content
   form.scrollable-content(action="/points/guessTheScore", method="post")
      .score
         .home.guess-block
            label(for="home_guess") Home
            .guess-wrap
               input(type="number", name="home_guess", id="home_guess", pattern="[0-9]*", placeholder="0", data-bind="value: home_score, fadeIn: !pick_set()")
               .value(data-bind="fadeIn: pick_set, duration: 400, text: home_score")
         .away.guess-block
            label(for="away_guess") Away
            .guess-wrap
               input(type="number", name="away_guess", id="away_guess", pattern="[0-9]*", placeholder="0", data-bind="value: away_score, fadeIn: !pick_set()")
               .value(data-bind="fadeIn: pick_set, duration: 400, text: away_score")
         .clear

      .team-info
         .home.team-glass
            .team= home.name
            .record= home.record
         .vs
         .away.team-glass
            .team= away.name
            .record= away.record
         .clear

      .picking(data-bind="visible: !pick_set()")
         button.submit-guess(type="submit", value="Submit", data-bind="click: setPick, enabled: input_valid")

      .picked(data-bind="fadeIn: pick_set")
         .scrolling-text Your pick is set! Check back after the game to view results!
         .game-preview
            .title Game Preview