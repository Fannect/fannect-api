extend ../layout

block header
   h1(data-menu-root="profile") Profile
   a.ui-btn-right(href="/profile/selectSport", data-role="button") Add Team

block content
   .scrollable-content
      .profile-images
         .team-wrap
            img(src="#{team_image}")
            .cover
         .user-wrap
            img(src="#{user_image}")
            .cover

      .name= name

      .team-name-wrap
         .team= team
         .icon

      .score-wrap
         .score.roster
            .label Roster
            .value= score.roster
         .score.points
            .label Points
            .value= score.points
         .score.rank
            .label Rank
            .value= score.rank

      .bio
         .separator
         .text= personal.bio

      .game-day-spot
         .separator
         .text= personal.game_day_spot 
      
      .bragging-rights
         .separator
         .text= personal.bragging_rights

