@import "../lib/mixins"
@import "../lib/variables"

.points-points
   .ui-content
      padding-left: 8px

   .icon
      float: left

   .text
      position: relative
      margin-left: 82px
      height: 1px

   .inner
      display: table
      position: absolute
      top: 0px
      left: 0px
      height: 72px

   .game-name
      display: table-cell
      vertical-align: middle
      text-align: left
      text-transform: uppercase
      white-space: normal
      font-size: 1.3em

.points-attendanceStreak
   .ui-content
      padding: 0

      .info
         margin: 0 auto
         max-width: 600px
         height: 121px
         background: url(/images/games/attendance-streak/Overlay_Marquee_iPhone@2x.png) repeat-x 50% -1px
         background-size: 320px 121px
         position: relative
         overflow: hidden
         text-align: center

         .left-cap
            position: absolute
            left: 0
            top: -6px
            width: 13px
            height: 110px
            background: url(/images/games/attendance-streak/Overlay_MarqueeCap_Left_iPhone@2x.png)
            background-size: 13px 110px
         .right-cap
            position: absolute
            right: 0
            top: -6px
            width: 13px
            height: 110px
            background: url(/images/games/attendance-streak/Overlay_MarqueeCap_Right_iPhone@2x.png)
            background-size: 13px 110px

         .stadium-info
            padding-top: 8px

            .stadium
               font-size: 1.6em
               text-shadow: 0.1em 0.1em #000
               margin-bottom: 3px

            .location
               font-size: .7em
               color: color-light-gray
               text-shadow: 0.1em 0.1em #000

         .game-info
            margin-top: 10px
            font-size: .7em

            .team
               text-overflow: ellipsis
               white-space: nowrap;

            .record
               margin-top: 5px
               color: color-light-gray
               text-overflow: ellipsis
               white-space: nowrap;

            .home-info
               float: left
               width: 40%
               .inner
                  margin-left: 15px
            .vs
               float: left
               width: 20% 
               height: 36px
               background: url(/images/games/Overlay_VsButton@2x.png) no-repeat 50% 0%
               background-size: 36px 36px

            .away-info
               float: left
               width: 40%
               .inner
                  margin-right: 15px
      // .map

      .bottom
         position: absolute
         width: 100%
         height: 96px
         bottom: footer-height
         background: url(/images/games/attendance-streak/Overlay_ButtonHolder_iPhone@2x.png) 50% 0%
         background-size: 320px 96px

         .inner
            max-width: 280px
            padding: 0 12px
            margin: 32px auto 

.points-guessTheScore-pick
   .input
      margin: 10px auto 0
      width: 320px

      .guess-block
         float: left
         width: 50%
         text-align: center

         label
            color: color-light-gray

         input[type=number]
            font-family: JerseyM54, Helvetica, Arial, sans-serif
            font-size: 5.0em
            padding:  5px 10px
            width: 140px
            height: 200px
            margin: 0 auto
            text-align: center 
            border-radius: 10px

   .submit-wrap
      width: 250px
      margin: 12px auto 0

.points-guessTheScore-pick
.points-guessTheScore-picked
   .team-info
      width: 304px
      margin: 4px auto 0
      .team-glass
         float: left
      .vs
         float: left
         width: 36px 
         height: 36px
         margin-top: 2px
         background: url(/images/games/Overlay_VsButton@2x.png) no-repeat 50% 0%
         background-size: 36px 36px

.points-guessTheScore-picked
   .picked
      margin: 10px auto 0
      width: 320px

      .guessed
         float: left
         width: 50%
         text-align: center
         color: color-light-gray
         text-shadow: 0 0.13em  #000
         .score
            font-family: JerseyM54, Helvetica, Arial, sans-serif
            font-size: 5.0em
            margin: 8px 0 0 0
            background: url(/images/games/guess-the-score/Overlay_PickSetBox@2x.png)
            background-size: 129px 107px
            width: 129px
            height: 107px
            line-height: 107px
         &.home .score
            margin-left: 10px
         &.away .score
            margin-left: 21px

   .game-preview
      background: url(/images/games/guess-the-score/Overlay_SubtleShadow@2x.png) 50% -24px no-repeat
      background-size: 290px 60px
      width: 290px
      min-height: 36px
      margin 0 auto
      padding-top: 7px

      .title
         text-align: center
         color: color-light-gray
