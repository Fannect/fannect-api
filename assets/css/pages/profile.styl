@import "../lib/mixins"
@import "../lib/variables"

#profile-page
#connect-profile-page
   .profile-images
      position: relative
      height: 250px
      width: 320px
      margin: 0 auto
      .team-wrap
         position: absolute
         right: 0
         top: 0
         width: 210px
         height: 120px
         cursor: pointer
         .cover
            position: absolute
            top: 0
            left: 0
            z-index: 200
            width: 210px
            height: 210px
            background: url(../images/profile/Overlay_TeamPictureFrame.png) 
            background-size:162px 162px
         img
            width: 210px
            height: 210px
            border-radius: 10px
      .user-wrap
         z-index: 300
         position: absolute
         bottom: 0
         left: 0
         width: 162px
         height: 162px
         cursor: pointer
         .cover
            position: absolute
            z-index: 400
            width: 162px
            height: 162px
            background: url(../images/profile/Overlay_ProfilePictureFrame.png) 
            background-size:162px 162px
         img
            position: absolute
            top: 7px
            left: 11px
            width: 140px
            height: 140px
            border-radius: 10px
      .team-hint
         position: absolute
         width: 194px
         height: 186px
         top: 10px
         left: 10px
         background: url(../images/profile/Profile_tapToAddTeamPhoto.png)
         background-size: 194px 186px
      .user-hint
         position: absolute
         width: 136px
         height: 136px
         top: 9px
         left: 13px
         background: url(../images/profile/Profile_tapToAddProfilePhoto.png)
         background-size: 136px 136px
   .name
      font-size: 1.8em
      font-weight: bold
      text-align: center
   .team-name-wrap
      position: relative
      width: 302px 
      height: 66px
      margin: 8px auto
      background: url(../images/profile/Profile_GlassMarquee.png) 
      background-size:302px 66px
      text-transform: uppercase
      cursor: pointer
      .team
         display: block
         width: 222px
         height: 55px
         color: color-light-gray
         text-align: center
         line-height: 55px
         white-space: nowrap
         overflow: hidden
         padding: 5px 40px 0
         text-overflow: ellipsis
      .icon
         position: absolute
         top: 24px
         right: 18px
         width: 13px
         height: 15px
         background: url(../images/profile/Profile_TeamArrows.png) no-repeat
         background-size: 31px 15px 

   .score-wrap
      position: relative
      width: 302px
      height: 36px
      margin: 8px auto
      background: url(../images/profile/Profile_ScoreDisplay-iPhone.png) 
      background-size:302px 36px
      .score
         position: absolute
         top: 11px
         width: 78px
         font-size: .7em
         font-family: JerseyM54, Helvetica, Arial, sans-serif
         .label
            text-transform: uppercase
            float: left
         .value
            float: right
         &.roster
            left: 20px
         &.points
            left: 113px
         &.rank
            left: 206px
   .separator
      width: 320px
      height: 32px
      background: url(../images/profile/ProfileSeperators.png) no-repeat
      background-size: 965px 26px
      margin: 20px auto 5px auto
   .text
      width: 290px
      margin: 0 auto
      font-size: .8em
      line-height: 1.4em
   .bio
      .separator
         background-position: 0 0 
   .game-day-spot
      .separator
         background-position: -322.5px 0 
   .bragging-rights
      .separator
         background-position: -645px 0 

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   #profile-page
   #connect-profile-page
      .team-wrap .cover
         background-image: url(../images/profile/Overlay_TeamPictureFrame@2x.png)!important
      .user-wrap .cover
          background-image: url(../images/profile/Overlay_ProfilePictureFrame@2x.png)!important
      .user-hint
         background-image: url(../images/profile/Profile_tapToAddProfilePhoto@2x.png)!important
      .team-hint
         background-image: url(../images/profile/Profile_tapToAddTeamPhoto@2x.png)!important
      .team-name-wrap
         background-image: url(../images/profile/Profile_GlassMarquee@2x.png)!important
      .score-wrap
         background-image: url(../images/profile/Profile_ScoreDisplay-iPhone@2x.png)!important
      .separator
         background-image: url(../images/profile/ProfileSeperators@2x.png)!important