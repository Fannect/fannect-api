@import "lib/variables"
@import "lib/mixins"

// Layout

// .ui-page
//    background: url(/images/Background_PerforatedMetal@2x.png)

@font-face
   font-family: JerseyM54
   src: url(/fonts/JerseyM54.ttf)

.clear
   clear: both
   height: 1px

.header
   position: relative
   dropshadow: 0 2px 3px rgba(0,0,0,.5)
   z-index: 500
   .ui-btn-left
   .ui-btn-right
      top: 5px
   .ui-title
      margin-top: .5em
      margin-bottom: .5em
      font-family: JerseyM54, Helvetica, Arial, sans-serif
      font-size: 1.2em
      text-transform: uppercase

.scrollable-content
   position: absolute
   top: header-height - 1
   left: 0
   right: 0
   bottom: footer-height + 1
   overflow-y: auto
   overflow-x: hidden
   -webkit-overflow-scrolling: touch

.ui-page
   background: url(/images/Background_PerforatedMetal@2x.png) 50% 0
   background-size: 320px 480px

.footer
   .ui-navbar
      position: relative
      dropshadow: 0 -2px 3px rgba(0,0,0,.6)
      z-index: 500
   .ui-btn-inner
      padding-top: 38px
   .ui-btn-text
      font-size: .7em
      top: 8px
   .ui-icon.ui-icon-custom
      width: 48px
      height: 32px
      background: url(/images/icons/icons-tab.png) no-repeat;
      background-size: 260px 32px
      margin-left: -24px
   .profile-menu .ui-icon
      background-position: -159px 0
   .points-menu .ui-icon
      background-position: -106px 0
   .leaderboard-menu .ui-icon
      background-position: -53px 0
   .connect-menu .ui-icon
      background-position: 0 0
   .preferences-menu .ui-icon
      background-position: -212px 0

// Elements
.team-glass
   font-size: .7em
   background: url(/images/games/Overlay_TeamGlass_iPhone@2x.png)
   background-size: 134px 43px
   width: 110px
   height: 25px
   padding: 8px 12px 10px 12px
   text-align: center

   .team
      margin-bottom: 2px

   .record
      color: color-light-gray
      font-size: .9em

.scrolling-text
   position: relative
   width: 280px
   height: 24px
   margin: 4px auto
   background: url(/images/Overlay_ScrollBarBase@2x.png) repeat-x 0% 50%
   background-size: 2px 20px
   .text-wrap
      position: absolute
      left: 18px
      right: -2px
      height: 24px
      overflow: hidden
      .text
         font-size: .75em
         text-transform: uppercase
         line-height: 24px
         position: absolute;
         white-space: nowrap
   .cover
      position: absolute
      left: -5px
      width: 290px
      height: 24px
      background: url(/images/Overlay_ScrollBarFrame_iPhone@2x.png)
      background-size: 290px 24px
      dropshadow: 0 2px 4px rgba(0,0,0,0.8)
      border-radius: 5px
      z-index: 50

